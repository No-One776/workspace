package gvprojects.countdowntimer;

/**
 * Justin Rohr 1/11/12 This project models a count down timer.
 */
public class CountDownTimer {
	int hours, minutes, seconds;

	static int totalSeconds(int hours, int minutes, int seconds) {
		return (hours * 60) * 60 + minutes * 60 + seconds;
	}

	public CountDownTimer(int hours, int minutes, int seconds) {
		this.hours = hours;
		this.minutes = minutes;
		this.seconds = seconds;
	}

	public CountDownTimer(int minutes, int seconds) {
		this.minutes = minutes;
		this.seconds = seconds;
	}

	public CountDownTimer(int seconds) {
		this.seconds = seconds;
	}

	public CountDownTimer() {
		hours = 0;
		minutes = 0;
		seconds = 0;
	}

	public CountDownTimer(CountDownTimer other) {
		// CountDownTimer time = new CountDownTimer( other.getHours(),
		// other.getMinutes(), other.getSeconds() );

	}

	public CountDownTimer(String startTime) {

	}

	public int totalSeconds() {
		return (hours * 60) * 60 + minutes * 60 + seconds;
	}

	public boolean equals(Object other) {
		return this.equals(other);
	}

	public int compareTo(CountDownTimer other) {
		return other.getSeconds();
	}

	public void subtract(int seconds) {
		this.seconds -= seconds;
	}

	public void dec() {
		this.seconds--;
	}

	public String toString() {
		String helper = hours + ":";
		if (minutes > 9)
			helper += minutes + ":";
		else if (minutes == 0)
			helper += "00:";
		else
			helper += "0" + minutes + ":";
		if (seconds > 9)
			helper += seconds;
		else if (seconds == 0)
			helper += "00";
		else
			helper += "0" + seconds;
		return helper;
	}

	public int getHours() {
		return hours;
	}

	public int getMinutes() {
		return minutes;
	}

	public int getSeconds() {
		return seconds;
	}
}