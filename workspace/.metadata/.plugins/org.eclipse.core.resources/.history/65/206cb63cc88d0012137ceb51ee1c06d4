 */
package gvprojects.chess.model;

/**
 * @author rohrj
 * 
 */
public class Bishop extends ChessPiece {

	public Bishop(Player p) {
		super(p, "Bishop");
	}

	@Override
	public boolean isValidMove(Move m, IChessPiece[][] p) {
		if (super.isValidMove(m, p) == false)
			return false;
		else if (checkDiag(m, p) == false)
			return false;
		else
			return checkSpot(m, p);

		// return true;
	}

	private boolean checkSpot(Move m, IChessPiece[][] p) {
		int y = 0;
		if (m.fromRow < m.toRow) {
			for (int x = m.fromRow + 1; x < m.toRow; x++) {
				if (p[x][y] != null)
					return false;
				y++;
			}
		} else
			for (int x = m.fromRow - 1; x > m.toRow; x--) {
				if (p[x][y] != null)
					return false;
				y++;
			}
		return false;
	}
}
